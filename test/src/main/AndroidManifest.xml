<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haru.examplememo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name="com.haru.examplememo.App"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.haru.examplememo.LoginActivity"
            android:theme="@style/LoginTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:label="Memo"
            android:name=".MainActivity" />

        <activity android:name=".EmailLoginActivity"
            android:label="Login with email" />

        <activity android:name=".SignInActivity"
            android:label="Register Account" />

        <service android:name="com.haru.PushService"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name="com.haru.push.PushReceiver"
            android:enabled="true"
            android:exported="true" />

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.kakao.LoginActivity"
            android:configChanges="orientation|screenSize"/>

        <activity android:name="com.facebook.LoginActivity"/>

        <!-- 3 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

    </application>

</manifest>
