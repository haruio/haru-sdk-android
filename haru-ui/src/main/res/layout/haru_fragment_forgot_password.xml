<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:background="@color/haru_login_background"
    tools:context="com.haru.ui.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/submit_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/haru_forgot_password_title"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                style="@style/Haru.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="@string/haru_field_email"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/submit_button"
                android:background="@drawable/haru_login_button"
                android:textColor="#66FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1.0"
                android:layout_marginTop="16dp"
                android:text="@string/haru_submit" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>


